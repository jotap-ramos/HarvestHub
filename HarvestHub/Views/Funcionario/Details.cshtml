@model HarvestHub.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionario";
}

<h1>Detalhes do Funcionario</h1>

<div>
    <h4>Funcionario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAdmissao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAdmissao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    
    @if (Model.Contratos.Count > 0)
    {
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contratos)
        </dt>
        
        <table class="table">
            <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Contratos.First().NumeroContrato)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Contratos.First().Telefone)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Contratos.First().ValorTotal)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Contratos.First().DataInicio)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Contratos.First().DataFim)
                </td>
            </tr>
            </thead>

            <tbody>
            @foreach (var contrato in Model.Contratos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => contrato.NumeroContrato)
                    </td>
                    <td>
                        @Html.DisplayFor(model => contrato.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(model => contrato.ValorTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(model => contrato.DataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(model => contrato.DataFim)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar para Funcionario</a>
</div>
