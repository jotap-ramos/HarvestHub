@model IEnumerable<HarvestHub.Models.Producao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Custo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Custo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProducao">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProducao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProducao">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
