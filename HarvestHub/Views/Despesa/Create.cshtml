@model HarvestHub.Models.Despesa

@{
    ViewData["Title"] = "Cadastrar Despesa";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Tipo" class="control-label"></label>
            <input asp-for="Tipo" class="form-control" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataRegistro" class="control-label"></label>
            <input asp-for="DataRegistro" type="date" class="form-control"
                   value="@Model.DataRegistro.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DataRegistro" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataPagamento" class="control-label"></label>
            <input asp-for="DataPagamento" type="date" class="form-control" />
            <span asp-validation-for="DataPagamento" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}