@model HarvestHub.ViewModels.BalancoViewModel
@{
    ViewData["Title"] = "Listar Registros";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Seção de Despesas -->
    <div class="card shadow mb-4">
        <div class="card-header bg-danger text-white">
            <h4>Despesas</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Valor</th>
                        <th>Data de Registro</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var despesa in Model.Despesas)
                    {
                        <tr>
                            <td>@despesa.Tipo</td>
                            <td>@despesa.Valor.ToString("C")</td>
                            <td>@despesa.DataRegistro.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Seção de Receitas -->
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>Receitas</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Valor</th>
                        <th>Data de Registro</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var receita in Model.Receitas)
                    {
                        <tr>
                            <td>@receita.Tipo</td>
                            <td>@receita.Valor.ToString("C")</td>
                            <td>@receita.DataRegistro.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botão Voltar -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>